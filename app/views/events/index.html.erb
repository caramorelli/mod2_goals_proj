<h1>My Calendar</h1>

<div id="events_calendar">
  <%= render partial: "calendar", locals: {events: @events} %>
</div>

<table>
  <thead>
    <tr>
      <th>Name  </th>
      <th>Start time   </th>
      <th>End time   </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time.strftime("%m/%d/%Y") %></td>
        <td><%= event.start_time.strftime("%I:%M%p") %></td>
        <td><%= event.end_time.strftime("%m/%d/%Y") %></td>
        <td><%= event.end_time.strftime("%I:%M%p") %></td> <br>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>

