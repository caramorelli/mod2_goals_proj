<div class="splash-image">

  <div class="ui three column grid">
    <!-- first column -->
    <div class="column"></div>



    <!-- second column -->

    <div class="column" id="splash-box-signin">

      <% if flash[:errors] %>
        <% flash[:errors].each do |e| %>
        <h6> <%= e %></h6>
        <% end %>
        <% end %>


    <h1 class="ui header"> Sign Up</h1>
<form action="<%= users_url %>" method="post" class="ui form">
  <%= auth_token_input %>

  <label>
    Name
    <input type="text" name="user[name]" value="">
  </label>

  <label>
    Username
    <input type="text" name="user[username]" value="">
  </label>

  <label>
    Password
    <input type="password" name="user[password]" value="">
  </label>

              <button class="ui button" type="submit">Let's go!</button>
              <br>

          <br>
  </div>
<!-- third column -->
<div class="column"></div>
